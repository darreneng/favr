<!DOCTYPE html>
<html>
  <head>
    <title>Favr Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="/css/introHCI.css" rel="stylesheet">
    <script src="js/jquery-1.11.0.js"> </script>
    <script src="js/introHCI.js"> </script>

  </head>
  <body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="home2">Favr</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="profile2">My Profile</a></li>
        <li class="active"><a href="home2" >Pending Favrs<span class="sr-only">(current)</span></a></li>
        <li><a href="offer2">Offer a Favr</a></li>
        <li><a href="request2">Request a Favr</a></li>
        <li><a href="/">Logout</a></li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search User">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>


  	<div class="container">
    	<h1>Peyton Manning</h1>

      <div class="profile">
        <img src="images/peyton.jpg">
      </div>

      <br>

      <h2>Completed Favrs</h2>
          <div id="test"> </div>
          <table class="table">
            <thead>
                  <tr>
                    <th>Date</td>
                    <th>User</td>
                    <th>Task</td>
                  </tr>
            </thead>
            <tbody>
              {{#each completed}}
                <div class='favr' id="{{id}}">
                  <tr>
                    <td>{{date}}</td>
                    <td>{{name}}</td>
                    <td>{{task}}</td>
                  </tr>
                </div>
              {{/each}}
          </tbody>
        </table>
      </div><!-- /container-->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Favr Home</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <!--<link rel="stylesheet" type="text/css" href="../public/css/introHCI.css">-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <script src="js/jquery-1.11.0.js"> </script>
 <!-- <link href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/ui-lightness/jquery-ui.min.css" rel="stylesheet" />
  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script> -->
  <script src="js/introHCI.js"> </script>
</head>


<body>

 {{> menu}}

{{#if incoming}}
<div class="container">

    <h4>Incoming Favrs</h4>

    <table class="table">
      <thead>
            <tr>
              <th>Date</td>
              <th>User</td>
              <th>Task</td>
            </tr>
      </thead>
      <tbody>
        {{#each incoming}}
          <div class='favr' id="{{id}}">
            <tr>
              <!--<td>{{month}}/{{day}}</td>-->
              <td>{{date}}</td>
              <td>{{name}}</td>
              <td>{{task}}</td>

              <form action ="/acceptFavr" method = "get">
                <input hidden type="text" name="date" value="{{date}}">
                <input hidden type="text" name="name" value="{{name}}">
                <input hidden type="text" name="task" value="{{task}}">
                <input hidden type="text" name="id" value="{{id}}">
              <td><input type="submit" class="accept" value="Accept" ></td>
             </form>

              <form action ="/declineFavr" method = "get">
                <input hidden type="text" name="name" value="{{name}}">
              <td><input type ="submit" class="decline" value="Decline"></td>
            </form>

            </tr>
          </div>
        {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

<div class="container">

    <h4>Pending Favrs</h4>

    <table class="table">
      <thead>
            <tr>
              <th>Date</td>
              <th>User</td>
              <th>Task</td>
              <th>Is this Favr complete?</td>
            </tr>
      </thead>
      <tbody>
        {{#each favrs}}
          <div class='favr' id="{{id}}">
            <tr>
              <!--<td>{{month}}/{{day}}</td>-->
              <td>{{date}}</td>
              <td>{{name}}</td>
              <td>{{task}}</td>

              <form action ="/completedFavrs" method = "get">
                <input hidden type="text" name="date" value="{{date}}">
                <input hidden type="text" name="name" value="{{name}}">
                <input hidden type="text" name="task" value="{{task}}">
                <input hidden type="text" name="id" value="{{id}}">
              <td><input type="submit" class="complete" value="Completed" ></td>
             </form>

              <form action ="/deleteFavr" method = "get">
                <input hidden type="text" name="name" value="{{name}}">
              <td><input type ="submit" class="delete" value="Delete"></td>
            </form>

            </tr>
          </div>
        {{/each}}
    </tbody>
  </table>
</div>


</body>
</html>

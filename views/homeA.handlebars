<!DOCTYPE html>
<html lang="en">

<head>
  <title>Favr Home</title>
  {{> head}}
</head>

<body>

 {{> menu}}

  <div class="container">
    {{#if favrs_incoming}}
        <h4>Incoming Favrs</h4>
        <table class="table">
          <thead>
                <tr>
                  <th>Date</td>
                  <th>User</td>
                  <th>Task</td>
                </tr>
          </thead>
          <tbody>
            {{#each favrs_incoming}}
              <div class='favr' id="{{id}}">
                <tr>

                  <td>{{date}}</td>
                  <td>{{name}}</td>
                  <td>{{task}}</td>

                  <form action ="/acceptFavr" method = "get">
                    <input hidden type="number" name="id" value={{id}}>
                  <td><input type="submit" class="accept" value="Accept" ></td>
                 </form>

                  <form action ="/declineFavr" method = "get">
                    <input hidden type="number" name="id" value={{id}}>
                  <td><input type ="submit" class="decline" value="Decline"></td>
                </form>

                </tr>
              </div>
            {{/each}}
        </tbody>
      </table>
    {{/if}}


    {{#if favrs_from}}
      <h4>Favrs I owe</h4>
      <table class="table">
        <thead>
              <tr>
                <th>Date</td>
                <th>User</td>
                <th>Task</td>
                <th>Is this Favr complete?</td>
              </tr>
        </thead>
        <tbody>
          {{#each favrs_from}}
              {{> pending}}
          {{/each}}
      </tbody>
    </table>
    {{else}}
    <br><br>
    <h4><i> You currently do not owe anyone any Favrs </i></h4>
    <br><br>
  {{/if}}


  {{#if favrs_to}}
      <h4>Favrs Owed to me</h4>
      <table class="table">
        <thead>
              <tr>
                <th>Date</td>
                <th>User</td>
                <th>Task</td>
                <th>Is this Favr complete?</td>
              </tr>
        </thead>
        <tbody>
          {{#each favrs_to}}
              {{> pending}}
          {{/each}}
      </tbody>
    </table>
    {{else}}
    <h4><i> No one currently owes you any Favrs <i></h4>
  {{/if}}

  </div>


</body>
</html>
